<?xml version="1.0" encoding="utf-8"?>
<!--suppress DeprecatedClassUsageInspection -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:weightSum="10"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.github.matteobattilana.weather.WeatherView
                android:id="@+id/weather_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/line"
                android:id="@+id/ImView"
                tools:ignore="ContentDescription" />

            <!-- Weather Now -->
            <LinearLayout
                android:id="@+id/weatherNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 첫 번째 화면 상단 -->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/t1"
                            android:text="@string/DemonTime"
                            android:textSize="35sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/location_latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setLatitude"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/location_longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setLongitude"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/temperature_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setTemperature"
                            android:textSize="30sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                        <TextView
                            android:gravity="center"
                            android:id="@+id/location_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setWeatherState"
                            android:textSize="30sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                        <TextView
                            android:gravity="center"
                            android:id="@+id/airquality_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setAirPollution"
                            android:textSize="30sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 첫 번째 화면 하단 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/round_top"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="2"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:id="@+id/forecastText"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setRainSnowState"
                            android:textSize="25sp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:ignore="InefficientWeight" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/square"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/scRollTimeWeather"
                            android:orientation="horizontal"
                            tools:ignore="ScrollViewSize">

                        </LinearLayout>
                    </HorizontalScrollView>
                    <TextView
                        android:id="@+id/locationText"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/round_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/setLocalWeather"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>


            <!-- Air Pollution -->
