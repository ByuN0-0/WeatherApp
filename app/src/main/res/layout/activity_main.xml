<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:src="@drawable/pm2_5"-->
<!--                            />-->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setCOstate"/>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:id="@+id/Layout_CO"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round">
                        <TextView
                            android:id="@+id/COtext"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/setCOtext"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            tools:ignore="InefficientWeight">
                            <TextView
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/_4400_g"
                                android:textColor="@color/white"
                                android:background="@drawable/air_round0"
                                android:textSize="11dp"
                                android:layout_weight="1"
                                tools:ignore="NestedWeights,RtlHardcoded,SpUsage" />
                            <TextView
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/n9400"
                                android:textColor="@color/white"
                                android:background="@drawable/air_round1"
                                android:textSize="11dp"
                                android:layout_weight="1"
                                tools:ignore="RtlHardcoded,SpUsage" />
                            <TextView
