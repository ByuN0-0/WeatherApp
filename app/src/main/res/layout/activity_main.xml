                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setO3state"/>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:id="@+id/Layout_O3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round">
                        <TextView
                            android:id="@+id/O3text"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/setO3text"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            tools:ignore="InefficientWeight">
                            <TextView
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/_0_60_g"
                                android:textColor="@color/white"
                                android:background="@drawable/air_round0"
                                android:textSize="11dp"
                                android:layout_weight="1"
                                tools:ignore="NestedWeights,RtlHardcoded,SpUsage" />
